<h1 class="text-2xl font-bold mb-6 text-center">List Your Car for Rent</h1>

<%= form_with model: @car, local: true, html: { class: "max-w-2xl mx-auto bg-white p-8 rounded shadow" } do |f| %>
  <div class="space-y-6">
    <div>
      <%= f.label :title, "Title", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :brand, "Brand", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :brand, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :model, "Model", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :model, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :year, "Year", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :year, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :seats, "Seats", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :seats, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :price_per_day, "Price per day", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :price_per_day, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :address, "Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :address, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :available_from, "Available from", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :available_from, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :available_until, "Available until", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :available_until, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>
    <div>
      <%= f.label :photo, "Photo", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="flex items-center gap-4">
        <%= f.file_field :photo, class: "block w-full text-sm text-gray-500
          file:mr-4 file:py-2 file:px-4
          file:rounded-md file:border-0
          file:text-sm file:font-semibold
          file:bg-indigo-50 file:text-indigo-700
          hover:file:bg-indigo-100
        " %>
      </div>
    </div>
  </div>
  <div class="mt-8 flex items-center justify-end gap-x-6">
    <%= link_to "Cancel", root_path, class: "text-sm font-semibold text-gray-600" %>
    <%= f.submit "Save", class: "rounded-md bg-indigo-500 px-4 py-2 text-sm font-semibold text-white hover:bg-indigo-600 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-500" %>
  </div>
<% end %>

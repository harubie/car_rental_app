<div class="max-w-4xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">My Bookings</h1>

  <% if @bookings.any? %>
    <% @bookings.each do |booking| %>
      <div class="bg-white p-4 rounded-lg shadow mb-4">
        <h3 class="font-semibold"><%= booking.car.model %></h3>
        <p>Start: <%= booking.start_date %></p>
        <p>End: <%= booking.end_date %></p>
        <p>Status: <%= booking.status %></p>

      <%= button_to "Delete", booking_path(booking), method: :delete,
          class: "mt-2 bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600",
          data: { confirm: "Are you sure you want to delete this booking?" } %>
      </div>
    <% end %>
  <% else %>
    <p>You haven't made any bookings yet.</p>
  <% end %>
</div>
